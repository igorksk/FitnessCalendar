@model FitnessCalendar.Models.FitnessRecord

@{
    ViewData["Title"] = "Добавить запись";
}

<h1>Добавить запись</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Вес</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullBodyTrainingId" class="control-label">FullBody</label>
                <select asp-for="FullBodyTrainingId" class="form-control" asp-items="ViewBag.TrainingTypes">
                    <option value="">-- Выберите тип --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StretchingId" class="control-label">Stretching</label>
                <select asp-for="StretchingId" class="form-control" asp-items="ViewBag.TrainingTypes">
                    <option value="">-- Выберите тип --</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 