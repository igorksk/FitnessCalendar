@model FitnessCalendar.Models.FitnessRecord

@{
    ViewData["Title"] = "Edit Record";
}

<h1>Edit Record</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight (kg)</label>
                <input asp-for="Weight" class="form-control" type="number" step="0.1" min="30" max="200" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Full Body</label>
                <div class="ms-2">
                    <div class="form-check">
                        <input type="radio" asp-for="FullBodyTrainingId" value="" class="form-check-input" id="fullbody_none" checked="@(Model.FullBodyTrainingId == null)" />
                        <label class="form-check-label" for="fullbody_none">None</label>
                    </div>
                    @if (ViewBag.FullBodyTypes != null)
                    {
                        @foreach (var type in ViewBag.FullBodyTypes)
                        {
                            <div class="form-check">
                                <input type="radio" asp-for="FullBodyTrainingId" value="@type.Id" class="form-check-input" id="fullbody_@type.Id" checked="@(Model.FullBodyTrainingId == type.Id)" />
                                <label class="form-check-label" for="fullbody_@type.Id">@type.Name</label>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Stretching</label>
                <div class="ms-2">
                    <div class="form-check">
                        <input type="radio" asp-for="StretchingId" value="" class="form-check-input" id="stretching_none" checked="@(Model.StretchingId == null)" />
                        <label class="form-check-label" for="stretching_none">None</label>
                    </div>
                    @if (ViewBag.StretchingTypes != null)
                    {
                        @foreach (var type in ViewBag.StretchingTypes)
                        {
                            <div class="form-check">
                                <input type="radio" asp-for="StretchingId" value="@type.Id" class="form-check-input" id="stretching_@type.Id" checked="@(Model.StretchingId == type.Id)" />
                                <label class="form-check-label" for="stretching_@type.Id">@type.Name</label>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 